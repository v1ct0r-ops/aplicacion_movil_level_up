{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Debug APK",
			"type": "shell",
			"command": "gradlew.bat",
			"args": [
				"assembleDebug"
			],
			"problemMatcher": [
				"$gradle-groovy",
				"$gradle-kotlin"
			],
			"group": "build"
		},
		{
			"label": "Install Debug APK",
			"type": "shell",
			"command": "gradlew.bat",
			"args": [
				"installDebug"
			],
			"problemMatcher": [
				"$gradle-groovy",
				"$gradle-kotlin"
			],
			"group": "build"
		}
	]
}